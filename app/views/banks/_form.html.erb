<%= form_with(model: @bank, local: true) do |form| %>
  <% if @bank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bank.errors.count, "error") %> prohibieron que este banco sea guardado:</h2>
      <ul>
        <% @bank.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <!-- Agrega otras propiedades segÃºn sea necesario -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
