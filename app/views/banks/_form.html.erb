<%= form_with(model: @bank, local: true) do |form| %>
  <div class="field">
    <%= form.label :name, t('activerecord.attributes.bank.name') %>
    <%= form.text_field :name %>
    <% @bank.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit t('common.submit') %>
  </div>
<% end %>

