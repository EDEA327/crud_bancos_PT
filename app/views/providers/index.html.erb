<div class="container mt-4">
  <h1><%= t('.title') %></h1>

  <% if @providers.any? %>
    <!-- Lógica para cuando hay proveedores -->
    <% if notice %>
      <div class="notice alert alert-success"><%= notice %></div>
    <% end %>

    <ul class="list-group mt-3">
      <% @providers.each do |provider| %>
        <li class="list-group-item">
          <%= link_to provider.name, provider_path(provider) %>
        </li>
      <% end %>
    </ul>

    <%= will_paginate @providers, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

  <% else %>
    <!-- Lógica para cuando no hay proveedores -->
    <p class="mt-3"><%= t('providers.index.no_providers') %></p>
  <% end %>

  <%= link_to t('providers.index.add_provider'), new_provider_path, class: 'btn btn-primary mt-3' %>
</div>
